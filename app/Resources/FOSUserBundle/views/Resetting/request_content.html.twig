{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-6 col-lg-offset-3">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="form-group">
            <label for="username" class="hide">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" class="form-control c-square c-theme input-lg" placeholder="{{ 'resetting.request.username'|trans }}"/>
        </div>
        <div class="form-group">
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn c-theme-btn c-btn-uppercase btn-lg c-btn-bold c-btn-square" />
        </div>
    </form>
</div>